<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/mainback"
    tools:context=".Jumbled">

    <TextView
        android:id="@+id/txthint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textColor="#030585"
        android:background="@drawable/txtback"
        android:layout_marginTop="100dp"
        android:text="Hint"
        android:textStyle="bold|italic"
        android:textAlignment="center"
        />

    <TextView
        android:id="@+id/txtanswer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="7"
        android:padding="10dp"
        android:clickable="false"
        android:focusable="false"
        android:textSize="32sp"
        android:textColor="#032077"
        android:gravity="center"
        android:layout_gravity="center"

        android:background="@drawable/txtback"
        android:layout_marginTop="150dp"
        android:text=""
        android:textAlignment="center"/>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rowCount="4"
        android:columnCount="4"
        android:layout_marginTop="150dp">
        <Button
            android:id="@+id/btn1"
            android:onClick="Check1"
            />
        <Button
            android:id="@+id/btn2"
            android:layout_marginLeft="12dp"
            android:onClick="Check2"
            />
        <Button
            android:id="@+id/btn3"
            android:layout_marginLeft="12dp"
            android:onClick="Check3"
            />
        <Button
            android:id="@+id/btn4"
            android:layout_marginLeft="12dp"
            android:onClick="Check4"

            />
        <Button
            android:id="@+id/btn5"
            android:onClick="Check5"
            />
        <Button
            android:id="@+id/btn6"
            android:layout_marginLeft="12dp"
            android:onClick="Check6"
            />
        <Button
            android:id="@+id/btn7"
            android:layout_marginLeft="12dp"
            android:onClick="Check7"
            />
        <Button
            android:id="@+id/btn8"
            android:layout_marginLeft="12dp"
            android:onClick="Check8"
            />
        <Button
            android:id="@+id/btn9"
            android:onClick="Check9"
            />
        <Button
            android:id="@+id/btn10"
            android:layout_marginLeft="12dp"
            android:onClick="Check10"
            />
        <Button
            android:id="@+id/btn11"
            android:layout_marginLeft="12dp"
            android:onClick="Check11"
            />
        <Button
            android:id="@+id/btn12"
            android:layout_marginLeft="12dp"
            android:onClick="Check12"
            />
        <Button
            android:id="@+id/btn13"
            android:onClick="Check13"
            />
        <Button
            android:id="@+id/btn14"
            android:layout_marginLeft="12dp"
            android:onClick="Check14"
            />
        <Button
            android:id="@+id/btn15"
            android:layout_marginLeft="12dp"
            android:onClick="Check15"
            />
        <Button
            android:id="@+id/btn16"
            android:layout_marginLeft="12dp"
            android:onClick="Check16"

            />


    </GridLayout>









</LinearLayout>